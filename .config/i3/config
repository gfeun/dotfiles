mode "scratch" {
  bindsym $up [instance="scratch"] move scratchpad, scratchpad show, move position 2ppt 2ppt, resize set 90ppt 30ppt;
  bindsym $down [instance="scratch"] move scratchpad, scratchpad show, move position 5ppt 55ppt, resize set 90ppt 40ppt;

  bindsym $right [instance="scratch"] move scratchpad, scratchpad show, move position 69ppt 5ppt, resize set 30ppt 90ppt;
  bindsym $left [instance="scratch"] move scratchpad, scratchpad show, move position 1ppt 5ppt, resize set 30ppt 90ppt;

  bindsym Return mode "default"
  bindsym Escape mode "default"
}

